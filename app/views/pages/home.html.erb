<div class="center">
  <h1>
    <span>Louer</span>
    <span data-controller="animtext" data-target="animtext.headline" class="cd-headline clip home-headline" id="headline">
      une loutre
      <span class="cd-words-wrapper single-headline">
        <b class="is-visible">un chat</b>
        <b>un chien</b>
        <b>une girafe</b>
        <b>un hamster</b>
      </span>
</h1>
  <div class="banner-container">
    <%= render 'shared/banner' %>
  </div>
  <h1>Nos suggestions</h1>
    <div id="suggestions">
      <div class="card-container">
        <% @pets.sample(6).each do |pet| %>
        <%= render partial: "shared/pet", locals: { pet: pet } %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="see-more-container">
    <%= link_to "Voir plus d'animaux", pets_path, class: "see-more-button" %>
  </div>
</div>
