<div class="pet-container">
  <div class="pet-card">
    <div id="<%= dom_id @pet %>">
            <div class="pet-attributes">
              <div class="pet-title-box">
              <h1 class="pet-name"><%= @pet.name %></h1>
              <p>"<%= @pet.content %>"</p>
              </div>
              <div class ="infos-show">
              <p><%= @pet.species %></p>
              <p><i class="fa-solid fa-paw"></i><%= @pet.rating %></p>
              <p><i class="fa-solid fa-location-dot"></i> <%= @pet.address %></p>
              <p><i class="fa-solid fa-euro-sign"></i> <%= @pet.price %>€ / J</p></div>
              <img class="pet-photo" src="<%= @pet.photo.attached? ? cl_image_path(@pet.photo.key) : '#' %>" alt="<%= @pet.name %>">
            </div>
    </div>
  </div>

  <div class="reservation-wrapper">
    <div class="form-card">
      <%= simple_form_for [@pet, @reservation] do |f| %>
        <div class="dates-input">
          <%= f.input :start_date, label: 'Date de début', as: :string, input_html: { data: { controller: "datepickr" } } %>
          <%= f.input :end_date, label: 'Date de fin', as: :string, input_html: { data: { controller: "datepickr" } } %>
        </div>
        <%# <%= f.submit 'Réserver', class: 'reservation-button' %>
        <%= link_to 'Réserver', animal_cause_path, class: 'reservation-button' %>
      <% end %>
      <div class="map-container-show">
        <div id="map" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
</div>
