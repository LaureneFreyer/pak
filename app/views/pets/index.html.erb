<div id="suggestions">
  <div class="card-container">
    <% @pets.each do |pet| %>
      <%= render partial: "shared/pet", locals: { pet: pet } %>
    <% end %>
  </div>
  <div class="see-more-container">
    <%= link_to "Retour", "/", class: "see-more-button" %></li>
  </div>
</div>
