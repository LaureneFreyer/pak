<div id="category-filter" data-controller="category" class="text-center">
  <button class="category-button" data-category="all" data-action="click->category#filterByCategory" data-target="category.categoryButton">Tous</button>
    <button class="slach">|</button>
  <button class="category-button" data-category="Chien" data-action="click->category#filterByCategory" data-target="category.categoryButton">Chiens</button>
    <button class="slach">|</button>
  <button class="category-button" data-category="Chat" data-action="click->category#filterByCategory" data-target="category.categoryButton">Chats</button>
    <button class="slach">|</button>
  <button class="category-button" data-category="Oiseau" data-action="click->category#filterByCategory" data-target="category.categoryButton">Oiseaux</button>
    <button class="slach">|</button>
  <button class="category-button" data-category="autres" data-action="click->category#filterByCategory" data-target="category.categoryButton">Autres</button>
