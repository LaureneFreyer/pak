<h1 class="page-title">Nos animaux autour de vous :</h1>


<div class="page-container">
  <div class="card-container">

    <div id="suggestions">
      <div class="card-container">
        <% @pets.each do |pet| %>
          <div id="<%= dom_id pet %>">
            <div class="card-trip" onclick="window.location.href='<%= pet_path(pet) %>';" data-category="<%= pet.species %>">
              <div class="card">
                <%= cl_image_tag pet.photo.key, width: 100, height: 150 %>
                <div class="card-trip-user">
                  <%= pet.rating %><i class="fa-solid fa-paw" style="color: white;"></i>
                </div>
                <div class="card-trip-infos">
                  <div>
                    <h2><%= pet.name %></h2>
                    <p><%= pet.species %></p>
                    <div class="city">
                      <p><i class="fa-solid fa-location-dot"></i> <%= pet.address %></p>
                    </div>
                    <h3 class="card-trip-pricing"><%= pet.price %>â‚¬</h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="map-container">
    <div id="map" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
